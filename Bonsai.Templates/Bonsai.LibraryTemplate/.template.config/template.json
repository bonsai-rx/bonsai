{
    "$schema": "http://json.schemastore.org/template",
    "author": "Bonsai",
    "classifications": [ "Bonsai", "Library" ],
    "description": "A project for creating a Bonsai library",
    "identity": "Bonsai.LibraryTemplate",
    "name": "Bonsai Library",
    "tags": {
        "language": "C#",
        "type": "project"
    },
    "sources": [
        {
            "modifiers": [
                {
                    "exclude": [
                        "**/[Bb]in/**",
                        "**/[Oo]bj/**",
                        "**/[Pp]roperties/**",
                        "**/*.ico",
                        "**/*.vstemplate",
                        "Bonsai.LibraryTemplate.csproj"
                    ],
                    "rename": {
                        "launchSettings.json": "Properties/launchSettings.json"
                    }
                }
            ]
        }
    ],
    "symbols": {
        "projectName": {
            "type": "derived",
            "valueSource": "name",
            "valueTransform": "replace",
            "replaces": "$safeprojectname$",
            "fileRename": "ProjectTemplate"
        },
        "authors": {
            "type": "parameter",
            "defaultValue": "",
            "replaces": "$registeredorganization$"
        },
        "year": {
            "type": "generated",
            "generator": "now",
            "parameters": {
                "format": "yyyy"
            },
            "replaces": "$year$"
        }
    },
    "forms": {
        "replace": {
            "identifier": "replace",
            "pattern": "",
            "replacement": ""
        }
    },
    "sourceName": "$projectname$",
    "shortName": "bonsailib",
    "preferNameDirectory": true
}